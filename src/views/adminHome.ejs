    <script>


        $("#AddNewSet").click(function (e) {


            e.preventDefault();


            AddSet();

        });
        getSet();

        function AddSet() {
            alert("post request");
            let categoryCode = $("#SetcategoryCode").val();
            let setCode = $("#setCode").val();
            let setName = $("#setName").val();
            let setDescription = $("#setDescription").val();
            let timeLimit = $("#timeLimit").val();
            let data = {
                "setCode": setCode,
                "setName": setName,
                "setDescription": setDescription,
                "timeLimit": timeLimit,
                "categoryCode": categoryCode
            }

            console.log(data);
            console.log(categoryCode);
            console.log(setCode);
            console.log(setName);
            console.log(setDescription);
            if (setName == null) {
                alert("sss");

                return;
            }
            $.post("/admin/addSet", {
                setCode,
                setName,
                setDescription,
                timeLimit,
                categoryCode

            }, (data, status) => {

                if (data == true) {

                    $("#setCode").val("");
                    $("#setName").val("");
                    $("#setDescription").val("");
                    $("#timeLimit").val("");

                    alert("Set saved");
                }
                else {
                    alert(data);
                }
            });


        }

        $("#addCatagory").click(function (e) {
            e.preventDefault();
            addCatagory();

        });


        function addCatagory() {
            console.log("added");




            $.post("/admin/addCatagory", {
                catagoryCode: $("#catagoryCode").val(),
                catagoryName: $("#catagoryName").val()

            }, (data, status) => {

                if (data == true) {
                    let selectCat = document.getElementById("selectCategory");
                    selectCat.innerHTML += `<option value=${$("#catagoryCode").val()}> ${$("#catagoryName").val()}</option>`;

                    $("#catagoryCode").val("");
                    $("#catagoryName").val("");
                    alert("catagory saved");
                }
                else {
                    alert(data);
                }
            });

        }
        function hideAll() {
            console.log("hide");
            $("#AddQuestion").css({ display: "none" });
            $("#AddCatForm").css({ display: "none" });
            $("#AddSetForm").css({ display: "none" });

        }
        async function show(id) {
            hideAll();
            $(`#${id}`).css({ display: "" });

            if (id === "AddQuestion") {
                await getSet();
            }
            if(id ==="AddSetForm"){
                await getCategory();
            }


        }

        async function getSet() {
            $.get("/admin/getSet", {}, (data, status) => {
                alert("requesting");
                document.getElementById("selectSet").innerHTML += `<option value=${data[0].setCode}>${data[0].setCode}</option>`
                for (let i in data) {
                    if(i==0)continue;
                    document.getElementById("selectSet").innerHTML += `<option value=${data[i].setCode}>${data[i].setCode}</option>`
                }
            })
        }
        async function getCategory(){
            $.get("/admin/getCategory",(data,status)=>{
                   document.getElementById("selectSet").innerHTML += `<option value=${data[0].setCode}>${data[0].setCode}</option>`
                for (let i in data) {
                    if (i == 0) continue;
                    document.getElementById("selectSet").innerHTML += `<option value=${data[i].setCode}>${data[i].setCode}</option>`
                }
            }

                )
            
        }


    </script>
