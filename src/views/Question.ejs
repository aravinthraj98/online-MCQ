  <body>
        <%- include('./header'); %>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        
            
            <div class="carousel-item active bg-grey">Instruction!</div>
            <form action="submit" method="POST" name="submitAnswer">
        <% for(i in results) { %>
            <div class="carousel-item">
                
            <%= results[i]["question"] %><br>
           <input type="radio" value='<%= results[i]["option_A"] %>' name='<%= results[i]["question"] %>'><%= results[i]["option_A"] %><br>
        <input type="radio" value='<%= results[i]["option_B"]  %>' name='<%= results[i]["question"] %>'><%= results[i]["option_B"] %><br>
        <input type="radio" value='<%= results[i]["option_C"] %>' name='<%= results[i]["question"] %>'><%= results[i]["option_C"] %><br>
        <input type="radio" value='<%= results[i]["option_D"] %>' name='<%= results[i]["question"] %>'><%= results[i]["option_D"] %><br>
            


            </div>
        <%}%>   
       
        
      
    </div>
    <button type="submit" name="setCode" value=<%= set %>>submit exam</button>
    </form>
    <button  href="#carouselExampleControls" role="button" data-slide="prev">prev</button>
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <button  href="#carouselExampleControls" role="button" data-slide="next">NEXT</button>
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
